{% for zone in dns.zones %}
zone "{{ zone.domain }}" {
    type master;
    file "/etc/bind/zones/db.{{ zone. domain }}";
    # for secondary DNS
    # allow-transfer { 10.128.20.12; };
};
{% endfor %}

zone "consul.local" {
    type forward;
    forward only;
    forwarders { 127.0.0.1 port 8600; };
};
