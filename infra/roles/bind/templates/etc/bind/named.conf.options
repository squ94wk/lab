acl "trusted" {
        127.0.0.1;
        {% for vlan in vlans %}
        {{ vlan.network_cidr }};
        {% endfor %}
};

options {
	directory "/var/cache/bind";

	recursion yes;
    allow-recursion { trusted; };
    listen-on {
            127.0.0.1;
            {% for vlan in vlans %}
            {{ vlan.ip }};
            {% endfor %}
    };
    allow-transfer { none; };

    forwarders {
            8.8.8.8;
            8.8.4.4;
            1.1.1.1;
    };
};
