acl "trusted" {
        127.0.0.1;
        0.0.0.0/0;
};

options {
	directory "/var/cache/bind";

	recursion yes;
    allow-recursion { trusted; };
    listen-on {
            127.0.0.1;
            {{ ansible_default_ipv4.address }};
    };
    allow-transfer { none; };

    forwarders {
            8.8.8.8;
            8.8.4.4;
            1.1.1.1;
    };
};
